<div class="container m-5">
  <h1>Longest Word</h1><br><br>
  <div style="font-weight:bold; font-size:2.5em">
    -
    <% @letters.each do |letter| %>
    <%= letter %> -
    <% end %>
    <br><br>
  </div>
  <form action="/score" method="post" data-turbo="false">
      <h3>What is the longest word you can find using only the suggested letters?</h3>
      <div class="mb-3"><input type="text" name="word"></div>
      <div class="mb-3"><input type="submit" value="Submit Word"></div>  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
